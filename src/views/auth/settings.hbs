<div class="dashboard-container">

    <!-- SIDEBAR -->
    <!-- SIDEBAR REMOVED (Handled by Layout) -->

    <!-- LIST SETTINGS CONTENT -->
    <main class="main-content">
        <header class="top-header">
            <div class="welcome-text">
                <h1>Account Settings</h1>
                <p>Manage your profile and preferences.</p>
            </div>
        </header>

        {{#if success}}
        <div class="alert success"><i class="fa-solid fa-check-circle"></i> {{success}}</div>
        {{/if}}
        {{#if error}}
        <div class="alert error"><i class="fa-solid fa-triangle-exclamation"></i> {{error}}</div>
        {{/if}}

        <div class="settings-container glass-card">

            <!-- TABS HEADERS -->
            <div class="settings-tabs">
                <button class="tab-btn active" onclick="openTab(event, 'profile')">
                    <i class="fa-regular fa-id-card"></i> Profile
                </button>
                <button class="tab-btn" onclick="openTab(event, 'security')">
                    <i class="fa-solid fa-shield-halved"></i> Security
                </button>
                <button class="tab-btn" onclick="openTab(event, 'notifications')">
                    <i class="fa-regular fa-bell"></i> Notifications
                </button>
            </div>

            <div class="settings-content">

                <!-- PROFILE TAB -->
                <div id="profile" class="tab-content active">
                    <form action="/dashboard/settings" method="POST" enctype="multipart/form-data"
                        class="settings-form">
                        <div class="profile-header-edit">
                            <div class="avatar-edit">
                                <img src="{{#if user.profile_image}}{{user.profile_image}}{{else}}https://ui-avatars.com/api/?name={{user.name}}&background=random{{/if}}"
                                    alt="Profile" id="profile-preview">
                                <label for="profile_image" class="upload-icon"><i
                                        class="fa-solid fa-camera"></i></label>
                                <input type="file" name="profile_image" id="profile_image" accept="image/*"
                                    onchange="previewImage(this)">
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="form-group">
                                <label>Full Name</label>
                                <div class="input-wrapper">
                                    <i class="fa-regular fa-user"></i>
                                    <input type="text" name="name" value="{{user.name}}" required>
                                </div>
                            </div>
                            <div class="form-group disabled">
                                <label>Registration ID</label>
                                <div class="input-wrapper">
                                    <i class="fa-solid fa-id-badge"></i>
                                    <input type="text" value="{{user.registration_id}}" disabled>
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Phone Number</label>
                                <div class="input-wrapper">
                                    <i class="fa-solid fa-phone"></i>
                                    <input type="tel" name="phone" value="{{user.phone}}" placeholder="+1 234 567 890">
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label>Bio</label>
                            <div class="input-wrapper">
                                <i class="fa-regular fa-comment-dots"></i>
                                <textarea name="bio" rows="3"
                                    placeholder="Tell us about yourself...">{{user.bio}}</textarea>
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="form-group">
                                <label>College / University</label>
                                <div class="input-wrapper">
                                    <i class="fa-solid fa-building-columns"></i>
                                    <input type="text" name="college" value="{{user.college}}"
                                        placeholder="Example University">
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Major / Stream</label>
                                <div class="input-wrapper">
                                    <i class="fa-solid fa-book"></i>
                                    <input type="text" name="major" value="{{user.major}}"
                                        placeholder="Computer Science">
                                </div>
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="form-group">
                                <label>LinkedIn URL</label>
                                <div class="input-wrapper">
                                    <i class="fa-brands fa-linkedin"></i>
                                    <input type="url" name="linkedin" value="{{user.linkedin}}"
                                        placeholder="https://linkedin.com/in/...">
                                </div>
                            </div>
                            <div class="form-group">
                                <label>GitHub URL</label>
                                <div class="input-wrapper">
                                    <i class="fa-brands fa-github"></i>
                                    <input type="url" name="github" value="{{user.github}}"
                                        placeholder="https://github.com/...">
                                </div>
                            </div>
                        </div>

                        <div class="form-actions">
                            <button type="submit" class="btn-save">
                                <i class="fa-solid fa-floppy-disk"></i> Save Profile
                            </button>
                        </div>
                    </form>
                </div>

                <!-- SECURITY TAB -->
                <div id="security" class="tab-content">
                    <form action="/dashboard/settings/password" method="POST">
                        <div class="form-group disabled">
                            <label>Email Address (Cannot be changed)</label>
                            <div class="input-wrapper">
                                <i class="fa-regular fa-envelope"></i>
                                <input type="email" value="{{user.email}}" disabled>
                            </div>
                        </div>

                        <div class="form-group">
                            <label>Current Password</label>
                            <div class="input-wrapper">
                                <i class="fa-solid fa-lock"></i>
                                <input type="password" name="currentPassword" required>
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="form-group">
                                <label>New Password</label>
                                <div class="input-wrapper">
                                    <i class="fa-solid fa-key"></i>
                                    <input type="password" name="newPassword" required>
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Confirm New Password</label>
                                <div class="input-wrapper">
                                    <i class="fa-solid fa-key"></i>
                                    <input type="password" name="confirmPassword" required>
                                </div>
                            </div>
                        </div>

                        <div class="form-actions">
                            <button type="submit" class="btn-save">
                                <i class="fa-solid fa-shield-halved"></i> Update Password
                            </button>
                        </div>
                    </form>
                </div>

                <!-- NOTIFICATIONS TAB -->
                <div id="notifications" class="tab-content">
                    <form action="/dashboard/settings" method="POST" class="settings-form">
                        <div class="toggle-group">
                            <div class="toggle-info">
                                <h4>Email Notifications</h4>
                                <p>Receive updates about course deadlines and announcements.</p>
                            </div>
                            <label class="switch">
                                <input type="checkbox" name="notifications_email" {{#if
                                    user.notifications_email}}checked{{/if}}>
                                <span class="slider round"></span>
                            </label>
                        </div>

                        <div class="toggle-group">
                            <div class="toggle-info">
                                <h4>Push Notifications</h4>
                                <p>Get real-time alerts on your dashboard.</p>
                            </div>
                            <label class="switch">
                                <input type="checkbox" name="notifications_push" {{#if
                                    user.notifications_push}}checked{{/if}}>
                                <span class="slider round"></span>
                            </label>
                        </div>

                        <div class="toggle-group">
                            <div class="toggle-info">
                                <h4>SMS Notifications</h4>
                                <p>Receive urgent alerts via SMS to your phone.</p>
                            </div>
                            <label class="switch">
                                <input type="checkbox" name="notifications_sms" {{#if
                                    user.notifications_sms}}checked{{/if}}>
                                <span class="slider round"></span>
                            </label>
                        </div>

                        <div class="form-actions">
                            <button type="submit" class="btn-save">
                                <i class="fa-solid fa-floppy-disk"></i> Save Preferences
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </main>
</div>

<script>
    function openTab(evt, tabName) {
        const tabContents = document.querySelectorAll('.tab-content');
        const tabBtns = document.querySelectorAll('.tab-btn');

        tabContents.forEach(content => content.classList.remove('active'));
        tabBtns.forEach(btn => btn.classList.remove('active'));

        document.getElementById(tabName).classList.add('active');
        evt.currentTarget.classList.add('active');
    }

    function previewImage(input) {
        if (input.files && input.files[0]) {
            const reader = new FileReader();
            reader.onload = function (e) {
                document.getElementById('profile-preview').src = e.target.result;
            }
            reader.readAsDataURL(input.files[0]);
        }
    }
</script>

<style>
    .settings-container {
        height: 100%;
        display: flex;
        flex-direction: column;
    }

    .profile-header-edit {
        display: flex;
        justify-content: center;
        margin-bottom: 25px;
    }

    .avatar-edit {
        position: relative;
        width: 100px;
        height: 100px;
    }

    .avatar-edit img {
        width: 100%;
        height: 100%;
        border-radius: 50%;
        object-fit: cover;
        border: 3px solid white;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .upload-icon {
        position: absolute;
        bottom: 0;
        right: 0;
        background: var(--primary);
        color: white;
        width: 32px;
        height: 32px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: transform 0.2s;
        border: 2px solid white;
    }

    .upload-icon:hover {
        transform: scale(1.1);
    }

    #profile_image {
        display: none;
    }
</style>