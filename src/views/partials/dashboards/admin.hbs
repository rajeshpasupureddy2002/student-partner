<div class="admin-dashboard">
    <!-- Admin Hero Stats -->
    <div class="stats-grid">
        <div class="stat-card">
            <div class="stat-icon users"><i class="fas fa-users"></i></div>
            <div class="stat-info">
                <h3>Total Users</h3>
                <p class="stat-value">{{stats.totalUsers}}</p>
                <span class="stat-sub">{{stats.totalTeachers}} Teachers | {{stats.totalStudents}} Students</span>
            </div>
        </div>
        <div class="stat-card highlight">
            <div class="stat-icon pending"><i class="fas fa-user-clock"></i></div>
            <div class="stat-info">
                <h3>New Approvals</h3>
                <p class="stat-value">{{stats.pendingApprovals}}</p>
                <span class="stat-sub">Users waiting for verification</span>
            </div>
        </div>
        <div class="stat-card warning">
            <div class="stat-icon leaves"><i class="fas fa-calendar-minus"></i></div>
            <div class="stat-info">
                <h3>Pending Leaves</h3>
                <p class="stat-value">{{stats.pendingLeaves}}</p>
                <span class="stat-sub">System-wide requests</span>
            </div>
        </div>
    </div>

    <!-- Management Quick Actions -->
    <div class="section-label">System Management</div>
    <div class="action-grid admin-quick-actions">
        <a href="/admin/users" class="action-card">
            <div class="icon-box"><i class="fas fa-user-shield"></i></div>
            <div class="action-info">
                <h4>User & Role Management</h4>
                <p>Create, verify, and deactivate accounts</p>
            </div>
        </a>
        <a href="/admin/academic" class="action-card">
            <div class="icon-box"><i class="fas fa-university"></i></div>
            <div class="action-info">
                <h4>Academic Structure</h4>
                <p>Classes, subjects, and timetables</p>
            </div>
        </a>
        <a href="/admin/leaves" class="action-card">
            <div class="icon-box"><i class="fas fa-file-signature"></i></div>
            <div class="action-info">
                <h4>Leave Oversight</h4>
                <p>Oversight and policy enforcement</p>
            </div>
        </a>
        <a href="/admin/security" class="action-card">
            <div class="icon-box"><i class="fas fa-lock"></i></div>
            <div class="action-info">
                <h4>Security & Audit</h4>
                <p>System logs and configurations</p>
            </div>
        </a>
    </div>

    <!-- Monitoring & Orchestration Grid -->
    <div class="dashboard-grid admin-main-grid">

        <!-- COLUMN 1: Operational Intel -->
        <div class="dashboard-column left-col">

            <!-- Pending Approvals & Verification -->
            <div class="card glass-card">
                <div class="card-header">
                    <h3><i class="fas fa-user-shield"></i> Pending Verifications</h3>
                    <a href="/admin/users" class="btn btn-link">Manage Users</a>
                </div>
                <div class="card-body">
                    <ul class="admin-activity-list">
                        {{#each recentUsers}}
                        {{#if (eq this.role 'student')}}
                        <li class="activity-item pro-item">
                            <div class="user-avatar-mini">
                                <img src="https://ui-avatars.com/api/?name={{this.name}}&background=random" alt="">
                            </div>
                            <div class="item-meta">
                                <strong>{{this.name}}</strong>
                                <span>Requested Student Role</span>
                                <small>{{formatDate this.created_at}}</small>
                            </div>
                            <div class="item-actions">
                                <button class="btn-glow success"><i class="fas fa-check"></i></button>
                                <button class="btn-glow danger"><i class="fas fa-times"></i></button>
                            </div>
                        </li>
                        {{/if}}
                        {{/each}}
                    </ul>
                </div>
            </div>

            <!-- Leave Requests Monitoring -->
            <div class="card glass-card">
                <div class="card-header">
                    <h3><i class="fas fa-calendar-alt"></i> Urgent Leave Oversight</h3>
                    <a href="/admin/leaves" class="btn btn-link">View Requests</a>
                </div>
                <div class="card-body">
                    <div class="leave-stack">
                        {{#each pendingLeaves}}
                        <div class="leave-card-mini pro-item">
                            <div class="leave-header">
                                <strong>{{this.applicant_name}}</strong>
                                <span class="badge {{this.role}}">{{this.role}}</span>
                            </div>
                            <p>{{formatDate this.start_date}} - {{formatDate this.end_date}}</p>
                            <div class="card-actions">
                                <button class="btn btn-sm btn-success">Approve</button>
                                <button class="btn btn-sm btn-danger">Reject</button>
                            </div>
                        </div>
                        {{/each}}
                        {{#unless pendingLeaves}}
                        <p class="empty-text">No urgent requests found.</p>
                        {{/unless}}
                    </div>
                </div>
            </div>
        </div>

        <!-- COLUMN 2: System & Communication -->
        <div class="dashboard-column right-col">

            <!-- Global Broadcast Center -->
            <div class="card glass-card">
                <div class="card-header pro-header">
                    <h3><i class="fas fa-bullhorn"></i> Broadcast Center</h3>
                    <button class="btn btn-primary btn-sm" onclick="location.href='/admin/announcements'">
                        <i class="fas fa-plus"></i> New Broadcast
                    </button>
                </div>
                <div class="card-body">
                    <div class="broadcast-list pro-list">
                        <div class="broadcast-item high-priority pro-item">
                            <div class="bc-icon"><i class="fas fa-exclamation-triangle"></i></div>
                            <div class="bc-content">
                                <strong>System Upgrade Scheduled</strong>
                                <p>Tonight at 11:59 PM. All data services will be paused.</p>
                                <span class="role-chip all">All Roles</span>
                            </div>
                        </div>
                        <div class="broadcast-item pro-item">
                            <div class="bc-icon"><i class="fas fa-info-circle"></i></div>
                            <div class="bc-content">
                                <strong>Parent-Teacher Meet</strong>
                                <p>Feb 20th. Agenda: Term-1 Result Analysis.</p>
                                <span class="role-chip parent">Parents</span>
                                <span class="role-chip teacher">Teachers</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Admin Command Tasks (ORCHESTRATOR) -->
            <div class="card glass-card pro-card">
                <div class="card-header pro-header">
                    <h3><i class="fas fa-terminal"></i> Command Orchestrator</h3>
                    <div class="header-tools">
                        <span class="badge {{#if tasks.length}}high{{else}}low{{/if}}">{{tasks.length}} Active</span>
                    </div>
                </div>
                <div class="card-body pro-body">
                    <div class="orchestrator-wrapper single-container">
                        <div class="task-orchestrator-list">
                            {{#each tasks}}
                            <div class="orchestrator-row pro-item">
                                <div class="task-indicator {{this.priority}}"></div>
                                <div class="task-core">
                                    <span class="task-label">{{this.title}}</span>
                                    <div class="task-subtext">
                                        <span class="due-pill"><i class="far fa-calendar-alt"></i> {{formatDate
                                            this.due_date}}</span>
                                        <span class="priority-pill {{this.priority}}">{{this.priority}}</span>
                                    </div>
                                </div>
                                <div class="task-ops">
                                    <button class="op-btn edit"
                                        onclick="openEditTaskModal('{{this.id}}','{{this.title}}','{{this.due_date}}','{{this.priority}}')"
                                        title="Modify Command">
                                        <i class="fas fa-sliders"></i>
                                    </button>
                                    <form action="/dashboard/task/{{this.id}}/delete" method="POST" class="inline-form">
                                        <button type="submit" class="op-btn delete" title="Terminate Task"
                                            onsubmit="return confirm('Terminate this orchestration?')">
                                            <i class="fas fa-power-off"></i>
                                        </button>
                                    </form>
                                </div>
                            </div>
                            {{/each}}
                            {{#unless tasks}}
                            <div class="orchestrator-idle">
                                <div class="idle-icon"><i class="fas fa-microchip"></i></div>
                                <p>System idle. No active orchestrations.</p>
                            </div>
                            {{/unless}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>