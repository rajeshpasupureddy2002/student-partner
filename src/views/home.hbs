{{!-- HERO --}}
<section class="hero">
  <!-- Background layers -->
  <div class="hero-bg-animation"></div>

  <div class="blob blob-1"></div>
  <div class="blob blob-2"></div>
  <div class="blob blob-3"></div>

  <div class="hero-content">
    <h1 class="hero-title glitch">
      <span class="title-word glitch-word" data-text="Student">Student</span>
      <span class="title-word glitch-word" data-text="Partner">Partner</span>
    </h1>

    <p class="typewriter hero-subtitle">
      Your All-in-One Companion for Academics, Career Growth & Mental Wellness
    </p>

    <div class="hero-buttons">
      <a href="/login" class="btn primary liquid-btn magnetic">
        <i class="fas fa-rocket"></i>
        <span>Get Started Now</span>
      </a>
      <a href="/register" class="btn secondary magic-btn magnetic">
        <i class="fas fa-user-plus"></i>
        <span>Join Free Today</span>
      </a>
    </div>

    <div class="hero-stats stats-container">
      <div class="stat">
        <span class="stat-number" data-target="100">0</span>
        <span class="stat-label">Happy Students</span>
      </div>
      <div class="stat">
        <span class="stat-number" data-target="80">0</span>
        <span class="stat-label">Expert Mentors</span>
      </div>
      <div class="stat">
        <span class="stat-number" data-target="10">0</span>
        <span class="stat-label">Premium Resources</span>
      </div>
      <div class="stat">
        <span class="stat-number" data-target="98">0</span>
        <span class="stat-label">% Satisfaction</span>
      </div>
    </div>
  </div>

  <div class="hero-particles" id="particles-js"></div>

  <div class="scroll-indicator">
    <i class="fas fa-chevron-down fa-bounce"></i>
    <span>Discover More</span>
  </div>
</section>

