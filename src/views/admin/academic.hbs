<div class="academic-management">
    <div class="header-actions">
        <h1>Academic Management</h1>
        <button class="btn btn-primary" onclick="showAddClassModal()"><i class="fas fa-plus"></i> Add Class</button>
    </div>

    <div class="classes-grid">
        {{#each classes}}
        <div class="class-info-card glass-card">
            <div class="card-header">
                <h3><i class="fas fa-university"></i> {{this.name}}</h3>
                <span class="student-count"><span class="status-dot success"></span>{{this.studentCount}}
                    Students</span>
            </div>
            <div class="card-body">
                <div class="section-list">
                    <h4><i class="fas fa-layer-group"></i> Sections</h4>
                    <div class="section-tags">
                        {{#each this.sections}}
                        <span class="s-tag"><i class="fas fa-tag"></i> {{this.name}}</span>
                        {{/each}}
                        <button class="btn-add-tag" onclick="showAddSectionModal({{this.id}})"><i
                                class="fas fa-plus"></i></button>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>

<!-- Add Section Modal (Conceptual) -->
<div id="section-modal" class="modal">
    <form action="/admin/section/create" method="POST">
        <input type="hidden" name="class_id" id="modal-class-id">
        <input type="text" name="name" placeholder="Section Name (e.g. Section B)" required>
        <button type="submit">Create Section</button>
    </form>
</div>