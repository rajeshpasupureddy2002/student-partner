<div class="report-container fade-in visible">
    <div class="form-card glass-card pro-card">
        <div class="card-header">
            <h2><i class="fas fa-bullhorn"></i> Report an Issue</h2>
            <p>We are here to help. Please provide details below.</p>
        </div>

        <form action="/dashboard/academic-command/report" method="POST" class="report-form">
            <div class="form-group">
                <label for="category">Issue Category</label>
                <select name="category" id="category" required onchange="updateIssueTypes()">
                    <option value="" disabled selected>Select a Category</option>
                    {{#each categories}}
                    <option value="{{@key}}">{{@key}}</option>
                    {{/each}}
                </select>
            </div>

            <div class="form-group">
                <label for="issue_type">Specific Issue</label>
                <select name="issue_type" id="issue_type" required disabled>
                    <option value="" disabled selected>Select Category First</option>
                </select>
            </div>

            <div class="form-group">
                <label for="priority">Priority Level</label>
                <div class="priority-options">
                    <label class="radio-label">
                        <input type="radio" name="priority" value="low">
                        <span class="radio-custom low">Low</span>
                    </label>
                    <label class="radio-label">
                        <input type="radio" name="priority" value="medium" checked>
                        <span class="radio-custom medium">Medium</span>
                    </label>
                    <label class="radio-label">
                        <input type="radio" name="priority" value="high">
                        <span class="radio-custom high">High</span>
                    </label>
                </div>
            </div>

            <div class="form-group">
                <label for="description">Detailed Description</label>
                <textarea name="description" id="description" rows="5"
                    placeholder="Please describe the situation, including dates and any relevant context..."
                    required></textarea>
            </div>

            <div class="form-actions">
                <a href="/dashboard/academic-command" class="btn btn-outline">Cancel</a>
                <button type="submit" class="btn btn-primary magnetic">Submit Report</button>
            </div>
        </form>
    </div>
</div>

<script>
    const categories = {{{ json categories }}};

    function updateIssueTypes() {
        const categorySelect = document.getElementById('category');
        const issueTypeSelect = document.getElementById('issue_type');
        const selectedCategory = categorySelect.value;

        issueTypeSelect.innerHTML = '<option value="" disabled selected>Select Specific Issue</option>';

        if (selectedCategory && categories[selectedCategory]) {
            categories[selectedCategory].forEach(issue => {
                const option = document.createElement('option');
                option.value = issue;
                option.textContent = issue;
                issueTypeSelect.appendChild(option);
            });
            issueTypeSelect.disabled = false;
        } else {
            issueTypeSelect.disabled = true;
        }
    }
</script>

