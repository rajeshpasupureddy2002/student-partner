<div class="academic-command-container fade-in visible">
    <div class="header-actions">
        <div>
            <h1>Academic Command Center</h1>
            <p class="subtitle">Resolve issues, bridge gaps, and ensure harmony.</p>
        </div>
        <a href="/dashboard/academic-command/report" class="btn btn-primary magnetic"><i class="fas fa-plus-circle"></i>
            Report New Issue</a>
    </div>

    <div class="analytics-grid pro-grid">
        <div class="card glass-card pro-card">
            <div class="card-header pro-header">
                <h3><i class="fas fa-inbox"></i> Active Reports</h3>
            </div>
            <div class="card-body centered-stat">
                <span class="big-number">{{stats.total}}</span>
                <span class="stat-label">Total Issues</span>
            </div>
        </div>

        <div class="card glass-card pro-card">
            <div class="card-header pro-header">
                <h3><i class="fas fa-check-double"></i> Resolution Rate</h3>
            </div>
            <div class="card-body centered-stat">
                <span class="big-number">{{stats.resolutionRate}}%</span>
                <div class="progress-bar-mini">
                    <div class="fill" style="width: {{stats.resolutionRate}}%;"></div>
                </div>
            </div>
        </div>

        <div class="card glass-card pro-card">
            <div class="card-header pro-header">
                <h3><i class="fas fa-fire"></i> Top Category</h3>
            </div>
            <div class="card-body centered-stat">
                <span class="medium-text">{{stats.topCategory}}</span>
                <span class="stat-label">Most Reported Area</span>
            </div>
        </div>
    </div>

    <div class="section-label pro-label">Recent Reports</div>

    <div class="issues-list">
        {{#if issues.length}}
        {{#each issues}}
        <div class="issue-card glass-card pro-card magnetic">
            <div class="issue-header">
                <span class="badge {{this.status}}">{{this.status}}</span>
                <span class="date">{{formatDate this.created_at}}</span>
            </div>
            <div class="issue-body">
                <h4>{{this.issue_type}}</h4>
                <span class="category-tag"><i class="fas fa-tags"></i> {{this.category}}</span>
                <p class="description">{{this.description}}</p>
            </div>
            <div class="issue-footer">
                <div class="reporter-info">
                    <i class="fas fa-user-circle"></i>
                    <span>{{this.reporter_name}} ({{this.reporter_role}})</span>
                </div>
                {{#if ../isStaff}}
                <div class="actions">
                    <form action="/dashboard/academic-command/{{this.id}}/update" method="POST" class="status-form">
                        <select name="status" onchange="this.form.submit()" class="status-select">
                            <option value="pending" {{#if (eq this.status 'pending' )}}selected{{/if}}>Pending</option>
                            <option value="in_progress" {{#if (eq this.status 'in_progress' )}}selected{{/if}}>In
                                Progress</option>
                            <option value="resolved" {{#if (eq this.status 'resolved' )}}selected{{/if}}>Resolved
                            </option>
                            <option value="dismissed" {{#if (eq this.status 'dismissed' )}}selected{{/if}}>Dismissed
                            </option>
                        </select>
                    </form>
                </div>
                {{/if}}
            </div>
            {{#if this.resolution_notes}}
            <div class="resolution-box">
                <strong><i class="fas fa-check-circle"></i> Resolution:</strong> {{this.resolution_notes}}
            </div>
            {{/if}}
        </div>
        {{/each}}
        {{else}}
        <div class="empty-state glass-card">
            <i class="fas fa-clipboard-check"></i>
            <h3>All Clear!</h3>
            <p>No academic issues reported at the moment.</p>
        </div>
        {{/if}}
    </div>
</div>

